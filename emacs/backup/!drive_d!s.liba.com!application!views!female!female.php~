		 <script>
		 //pn 0 | 1
		  function sayHello(pn){
			var page = parseInt($("#page").val());
			var total = parseInt($("#total").val());
			if (pn == 1) {
				page = page + 1;
			} else {
				page = page -1;
			}
			if (page < 1) {
				page = 1;
			}
			if (page > total) {
				page = total;
			}
			$("#page").val(page);

			$.ajax({
				type: "POST",
				 url: "http://s.liba.com/female/ajax/",
				 //data: submitData,
				 data:"page="+page,
				dataType: "html",
				 success: function(data){
					  $("#target").html(data);
					}
			});
		  }
		</script>  
