				function check_water(){
						var torrentLen = document.getElementById("attachment").value.length;
						var ext = file_ext(document.getElementById("attachment").value);
						if (ext!='gif' && ext!='jpg' && ext!='png' && ext!='zip' && ext!='rar')
						   {document.getElementById('span_attachment').innerHTML=document.getElementById('span_attachment').innerHTML;
							hide_water();
							alert('上传的图片格式错误,只能上传gif,jpg,png,zip或rar文件!');
							return;
						   }
						if ( ext=="jpg" || ext=="gif"  || ext=="png" ){
										show_water();
						}else{
										hide_water();
						}
						if (navigator.userAgent.indexOf('Firefox') < 0 && navigator.userAgent.indexOf('MSIE 7.0') < 0)
						   {document.getElementById('prv').src=document.getElementById("attachment").value;
							//alert(document.getElementById('prv').fileSize);
							setTimeout("file_size()",1000);
						   }
						else
							{document.getElementById('prv').style.display='none';
							}
				}
				function file_ext(s){
						d=s.split(".");
						return d[d.length-1].toLowerCase();
				}
				function show_water(){
				//document.getElementById("do_water").checked=true;
				show("water");
				}
				function hide_water(){
				document.getElementById("do_water").checked=false;
				hide("water");
				}
				function show(a){
				document.getElementById(a).style.display='block';
				}
				function hide(a){
				document.getElementById(a).style.display='none';
				}
				//-->
			</script>
        </form>
    </div>
