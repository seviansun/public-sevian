<script>
	function getPersistProperty(oPersist, strProperty, strDefault)
	{
			var value = oPersist.getAttribute(strProperty);

			if (value == null)
					if (strDefault)
							value = strDefault;
					else
							value = "";

			return value;
	}

	function setPersistProperty(oPersist, strProperty, strValue)
	{
			oPersist.setAttribute(strProperty, strValue);
	}

	function loadData()
	{
			var oPersist = oPersistObject;
			oPersist.load("PersonData");
			form1.content.value = getPersistProperty(oPersist, "content");
	}

	function saveData()
	{
			var oPersist = oPersistObject;

			setPersistProperty(oPersist, "content", form1.content.value);

			oPersist.save("PersonData");
	}
	
	function resend_mobile_code() {
		var frm1 = document.form1;
		frm1.onsubmit = '';
		frm1.action = '/mobile_service.php';
		frm1.formAction.value = 'resendMobileCode';
		frm1.submit();
	}
</script>
